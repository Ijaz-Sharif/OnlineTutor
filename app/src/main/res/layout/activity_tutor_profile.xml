<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".Tutor_profile">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/abc"
        android:src="@drawable/qqqq"/>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/tutor_name"
        android:layout_marginTop="15dp"
        android:layout_below="@id/abc"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:paddingLeft="10dp"

            android:id="@+id/signup_pas"
            android:hint="Name"/>
    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_marginTop="15dp"
        android:id="@+id/q"
        android:layout_below="@id/tutor_name"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:textSize="25dp"
            android:layout_weight="1"
            android:layout_marginLeft="20sp"
            android:layout_height="wrap_content"
            android:text="Qualification"/>
        <Spinner
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/qualification"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"></Spinner>
    </LinearLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/tutor_number"
        android:layout_marginTop="15dp"
        android:layout_below="@id/q"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:paddingLeft="10dp"
            android:inputType="number"
            android:maxLength="11"
            android:hint="Mobile number"/>
    </android.support.design.widget.TextInputLayout>
   <Button
       android:layout_width="match_parent"
       android:layout_below="@id/tutor_number"
       android:layout_marginLeft="30dp"
       android:layout_marginRight="30dp"
       android:id="@+id/file"
       android:background="@drawable/style"
       android:paddingRight="20dp"
       android:drawableRight="@drawable/ic_layers_black_24dp"
       android:layout_marginTop="20dp"
       android:layout_height="wrap_content"
       android:text="select yor degree"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_below="@id/file"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="200dp"
        android:id="@+id/tutor_degree"
        />
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pb"
        android:layout_below="@id/tutor_degree"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_margin="10dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/u_f"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/style"
        android:text="upload info"/>

</RelativeLayout>